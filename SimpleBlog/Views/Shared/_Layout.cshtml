@using System.Web.Optimization
@{
    Layout = null;
    //top layout, no parent layout
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/ico" href="~/Content/favicon.ico" />
    @Styles.Render("~/styles")
</head>
<body>
    <div class="site-header">
        <header class="container">
            <h1 class="page-header">
                <a href="@Url.RouteUrl("Home")">Web Apps</a>
                <small>a simple web-blog powered by ASP.NET MVC</small>
            </h1>
        </header>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @RenderBody()
            </div>
            <div class="col-lg-4 sidebar">
                @Html.Action("Sidebar", "Layout")
            </div>
        </div>

        <footer>
            &copy; @DateTime.Now.Year - Thanh Lai. All rights reserved
        </footer>
    </div>

    @Scripts.Render("~/myscripts")
    @RenderSection("Scripts", false)

</body>
</html>
